<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log"

    tools:context=".MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="118dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi."
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-bold"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get Started"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:fontFamily="sans-serif-thin"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/login_card"
            android:layout_width="290dp"
            android:layout_height="229.6dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="35dp"
            app:cardBackgroundColor="@color/LavenderBlush"
            app:cardCornerRadius="30dp"
            app:cardElevation="200dp">


            <TextView
                android:id="@+id/phone_label"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Mobile No"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Pink"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="27dp"
                android:textAllCaps="true"

                />
            <EditText
                android:id="@+id/MobieNo"
                android:layout_width="fill_parent"
                android:hint="Enter 10 Digit Number"
                android:layout_height="44dp"
                android:textColorHint="@color/Pink"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="97.5dp"
                android:inputType="phone"
                android:maxLength="10"
                android:singleLine="true"

                />

            <Button
                android:id="@+id/SendOtp"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_marginTop="183dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:background="@drawable/roundbutton2"
                android:text="Proceed"
                android:textColor="@color/Pink"
                android:elevation="50dp"/>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>